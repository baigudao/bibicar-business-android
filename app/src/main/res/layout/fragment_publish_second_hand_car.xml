<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fafafa"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <com.bibicar.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="上传照片"
                    android:textColor="#3a3a3a"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bibi_default"/>

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_picture"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="14dp"
                        android:layout_height="18dp"
                        android:src="@drawable/lbsicon3x"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv"
                        android:text="深圳市"
                        android:textColor="#3a3a3a"
                        android:textSize="15sp"/>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="车辆信息"
                android:textColor="#3a3a3a"
                android:textSize="16sp"/>

            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#F6F6F6"/>

            <RelativeLayout
                android:id="@+id/rl_choose_car_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_setting_change"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="选择车型"
                    android:textColor="#3a3a3a"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_choose_car_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv1"
                    android:text="奥迪A4L 2016款"
                    android:textColor="#999999"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/more_icon3x"/>

            </RelativeLayout>

            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#F6F6F6"/>

            <RelativeLayout
                android:id="@+id/rl_car_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_setting_change"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="车辆价格"
                    android:textColor="#3a3a3a"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/more_icon3x"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tv_car_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv2"
                    android:text="万元"
                    android:textColor="#999999"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_car_price"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_car_price"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="35.6"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:textColor="#3a3a3a"
                    android:textColorHint="#efefef"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#F6F6F6"/>

            <RelativeLayout
                android:id="@+id/rl_car_color"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_setting_change"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="车辆颜色"
                    android:textColor="#3a3a3a"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/more_icon3x"/>

                <TextView
                    android:id="@+id/tv_car_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv3"
                    android:text="红色"
                    android:textColor="#999999"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <!--=========================联系信息========================-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="联系信息"
                android:textColor="#3a3a3a"
                android:textSize="16sp"/>

            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#F6F6F6"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_setting_change"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="联系人"
                    android:textColor="#3a3a3a"
                    android:textSize="15sp"/>


                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/more_icon3x"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/et_car_owner_name"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv4"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="陈升"
                    android:inputType="text"
                    android:maxLength="10"
                    android:textColor="#3a3a3a"
                    android:textColorHint="#efefef"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#F6F6F6"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_setting_change"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="看车地点"
                    android:textColor="#3a3a3a"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/more_icon3x"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/et_car_place"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv5"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="南山"
                    android:inputType="text"
                    android:maxLength="20"
                    android:textColor="#3a3a3a"
                    android:textColorHint="#efefef"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#F6F6F6"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_setting_change"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="联系电话"
                    android:textColor="#3a3a3a"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/more_icon3x"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/et_car_owner_phone"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv6"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="186xx56xx85"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="#3a3a3a"
                    android:textColorHint="#efefef"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <!--=========================车辆配置========================-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="车辆配置"
                    android:textColor="#3a3a3a"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/iv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="0/150"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#F6F6F6"/>

            <EditText
                android:id="@+id/et_car_configure"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#ffffff"
                android:hint="请输入车辆配置，150字以内！"
                android:padding="15dp"
                android:textColor="#3a3a3a"
                android:textColorHint="#efefef"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/btn_publish_car"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_login_change"
                android:text="车辆发布"
                android:textColor="@drawable/text_color_change"
                android:textSize="16sp"/>

        </LinearLayout>

    </com.bibicar.view.MyScrollView>

</LinearLayout>