<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp">

        <EditText
            android:id="@+id/et_input_phone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:hint="输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="#dedede"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_alignTop="@id/et_input_phone"
            android:layout_toRightOf="@id/et_input_phone"
            android:background="#d8d8d8"/>

        <Button
            android:id="@+id/btn_get_verification_code"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/et_input_phone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/background_login_register"
            android:enabled="false"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@drawable/text_color_change"
            android:textSize="12sp"/>

    </RelativeLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#d8d8d8"/>

    <EditText
        android:id="@+id/et_input_verification_code"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="输入验证码"
        android:inputType="number"
        android:maxLength="4"
        android:textColorHint="#dedede"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="15sp"/>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#d8d8d8"/>

    <EditText
        android:id="@+id/et_input_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:textColorHint="#dedede"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="15sp"/>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#d8d8d8"/>

    <Button
        android:id="@+id/btn_make_sure"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_login_register"
        android:enabled="false"
        android:gravity="center"
        android:text="确定"
        android:textColor="@drawable/text_color_change"
        android:textSize="16sp"/>

</LinearLayout>